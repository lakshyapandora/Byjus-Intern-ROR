
<%= form_with scope: :article,local:true,url: articles_path do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
      <% @article.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :author %><br>
      <%= form.text_area :author %><br>
      <% @article.errors.full_messages_for(:author).each do |message| %>
          <div><%= message %></div>
      <%end%>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  